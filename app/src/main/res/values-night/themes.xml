<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JohnSalazar" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorSecondary">@color/WGBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/primaryDark</item>
        <item name="android:statusBarColor">@color/primaryDark</item>
    </style>
    <style name="changeThemeText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="itemListFill">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="changeThemeColor">
        <item name="android:background">@color/WGBlue</item>
        <item name="android:textColorHint">#30FFFFFF</item>
    </style>
</resources>